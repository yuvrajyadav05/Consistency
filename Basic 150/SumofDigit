import java.util.*;
class SumofDigit{
    public static void main(String[] args){
        System.out.println("Enter the number");
        Scanner sc =new Scanner(System.in);
                int n=sc.nextInt();
                int sum=0;
                while(n!=0){
                    sum = sum+n%10;
                    n=n/10;
                }
                System.out.print(sum);
    }
}
